number = int(input("Enter number here: "))
if number % 2 == 0:
    print(number, "is even.")
else:
    print(number, "is odd.")



number = int(input("Enter number here: "))
if number > 1:
        for i in range (2, number):
            if (number % i) == 0:
                print (number, "is not prime.")
                break 
        else:
            print (number, "is prime.")
else:
    print(number, "is neither prime nor composite.")
def task():
    global number
    number = int(input("Enter number here: "))
    if number > 1:
        for i in range (2, number):
            if (number % i) == 0:
                print (number, "is not prime.")
            break 
        else:
                print (number, "is prime.")
    else:
        print(number, "is neither prime nor composite.")
start = input("Would you like to start this program?(y/n) ")
if start == 'y':
    task()
else:
    print("Terminating Script. Goodbye!")
task()






def task():
    global number
    factorial = 1
    number = int(input("Enter number here: "))
    if number < 0:
        print("Factorial of negative numbers is not possible")
    elif number == 0:
        print("Factorial of 0 is 1")
    else:
        for i in range (1, number + 1):
            factorial = factorial*i
        print("factorial of", number, "is", factorial)
start = input("Would you like to start this program?(y/n) ")
if start == 'y':
    task()
else:
    print("Terminating Script. Goodbye!")
task()






def task():
    global number
    number = [int(d) for d in input("Enter the number : ")]
    print("the sum of digits is : ", sum(number))
start = input("Would you like to start?(y/n) ")
if start == 'y':
    task()
else:
    print("Script is Terminated. Goodbye!")
task()
